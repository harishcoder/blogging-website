

<h1 id="head" >Add posts</h1>
{{#if errors}}
           {{#each errors}}
          <div class="message">{{msg}}</div>
           {{/each}}
   {{/if}}
   {{#if success_msg}}
   <div class="message">{{success_msg}}</div>
   {{/if}}

<form method="post" action="/posts/add" enctype="multipart/form-data">

<label name = "title">
<h3>Title:</h3>
<input type="text" name = "title" placeholder="Add title">
</label>
<label name = "category">
<h3>Category:</h3>
<select name = "category" size = 1>
  {{#each category}}
<option value = "{{title}}">{{title}}</options>
  {{/each}}
</select>
</label>
<label name = "body">
<h3>Body:</h3>
<textarea name="body" placeholder="Write your post here" id = "body"></textarea>
</label>
<label name = "image">
<h3>Profile Image:</h3>
<input id = "imagefile" type="file" name="addimage" placeholder="add Image">
</label>
<label name = "author">
<h3>Author:</h3>
<input type="text" name = "Author" placeholder="Your name">
</label>
<button type="submit" class="alert alert-primary">Submit</button>
</form>
<script src="../ckeditor/ckeditor.js"></script>
<script> CKEDITOR.replace('body')</script>
